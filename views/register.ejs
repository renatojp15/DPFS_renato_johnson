<!DOCTYPE html>
<html lang="en">
    <%- include('../views/partials/head'); -%>
<body>
    <%- include('../views/partials/header'); -%>

    <main>
        <div class="formulario">
            <h1>CREA TU CUENTA</h1>
            <form action="" method="POST">
                <h2>REGISTRO</h2>
                <div class="input">
                    <input type="text" name="firstName" id="firstName" placeholder="Nombre" required>
                </div>

                <div class="input">
                    <input type="text" name="lastName" id="lastName" placeholder="Apellido" required>
                </div>

                <div class="input">
                    <input type="email" name="email" id="email" placeholder="E-mail" required>
                </div>

                <div class="input">
                    <input type="password" name="password" id="password" placeholder="Contraseña" required>
                </div>

                <div class="input">
                    <input type="text" name="category" id="category" placeholder="Categoría" required>
                </div>

                <div class="input">
                    <input type="text" name="image" id="image" placeholder="Imagen" required>
                </div>

                <div class="imagen">
                    <div class="title-label">
                        <label for="avatar">AGREGA UNA FOTO PARA TU USUARIO</label>
                    </div>
                    <input type="file" name="avatar" accept=".jpg" required>
                </div>

                <div class="botones">
                    <button type="submit"><a href="">Enviar</a></button>
                    <button type="reset">Cancelar</button>
                </div>
            </form>
        </div>
    </main>

    <%- include('../views/partials/footer'); -%>
</body>
</html>